{
  "tasks": {
    "start": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors --watch=static/,routes/ dev.ts",
    "web": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors main.ts",
    "chatbot": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors chatbot/chatbot.ts",
    "migrate:create": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors migrate-db/create-migration.ts",
    "migrate:up": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors migrate-db/migrate-db.ts --up",
    "migrate:latest": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors migrate-db/migrate-db.ts --latest",
    "migrate:down": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors migrate-db/migrate-db.ts --down",
    "migrate:to": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors migrate-db/migrate-db.ts --to",
    "chatbot:up": "heroku ps:scale chatbot=1",
    "chatbot:down": "heroku ps:scale chatbot=0",
    "token_refresher:up": "heroku ps:scale token_refresher=1",
    "token_refresher:down": "heroku ps:scale token_refresher=0",
    "web:up": "heroku ps:scale web=1",
    "web:down": "heroku ps:scale web=0",
    "token_refresher": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors tokenRefresher/tokenRefresher.ts"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
