{
  "tasks": {
    "start": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors --watch=static/,routes/ dev.ts",
    "web": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors main.ts",
    "chatbot": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors chatbot/chatbot.ts",
    "migrate:create": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors db/create-migration.ts",
    "migrate:up": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors db/migrate.ts --up",
    "migrate:latest": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors db/migrate.ts --latest",
    "migrate:down": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors db/migrate.ts --down",
    "migrate:to": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors db/migrate.ts --to",
    "chatbot:up": "heroku ps:scale chatbot=1",
    "chatbot:down": "heroku ps:scale chatbot=0",
    "token_refresher:up": "heroku ps:scale token_refresher=1",
    "token_refresher:down": "heroku ps:scale token_refresher=0",
    "web:up": "heroku ps:scale web=1",
    "web:down": "heroku ps:scale web=0",
    "token_refresher": "DENO_TLS_CA_STORE=system deno run -A --unsafely-ignore-certificate-errors tokenRefresher/tokenRefresher.ts",
    "repl": "DENO_TLS_CA_STORE=system deno repl -A --unsafely-ignore-certificate-errors",
    "test": "DENO_TLS_CA_STORE=system deno test -A --unsafely-ignore-certificate-errors"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "semiColons": false,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
